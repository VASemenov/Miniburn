stages:
  - build
  - test

build:
  stage: build
  script:
    - echo "Building"
    - mkdir build
    - touch build/info.txt
  artifacts:
    paths:
      - build/


test:
  stage: test
  script:
    - echo "Testing"
    - curl -sL https://deb.nodesource.com/setup_14.x | apt-get install -y nodejs
    - npm run test:all
    - test -f "build/info.txt"